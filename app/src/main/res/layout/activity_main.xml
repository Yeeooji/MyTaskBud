<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFE39F">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container"
        android:layout_alignParentRight="true"
        android:translationZ="5dp"/>

    <TextView
        android:id="@+id/plannerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-thin"
        android:shadowColor="#341E11"
        android:shadowDx="3"
        android:shadowDy="7"
        android:shadowRadius="1"
        android:text="My Planner"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:translationZ="2dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/skrticon"
            android:translationZ="20dp"
            android:elevation="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calendarUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello Skrt,"

                android:shadowColor="#341E11"
                android:shadowDx="3"
                android:shadowDy="7"
                android:shadowRadius="1"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold"
                android:translationZ="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text="Welcomeback!"
                android:fontFamily="sans-serif-thin"
                android:shadowColor="#341E11"
                android:shadowDx="2"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:translationZ="2dp"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:adjustViewBounds="true"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@null"/>

    <ImageView
        android:layout_marginTop="170dp"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:adjustViewBounds="true"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/shadoweff"/>
        <!-- start of cardview !-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="183dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/planLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <LinearLayout
                android:id="@+id/planLayoutTodaySetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:animateLayoutChanges="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="18dp"
                            />
                        <ImageView
                            android:id="@+id/todayGreen"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:src="@drawable/plancreator_slab"
                            android:visibility="visible"
                            />
                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/planLayoutFutureSetter"
                    android:layout_toRightOf="@id/planLayoutTodaySetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:animateLayoutChanges="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upcoming"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="18dp"/>
                        <ImageView
                            android:id="@+id/futureGreen"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:src="@drawable/plancreator_slab"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/planLayoutPreviousSetter"
                    android:layout_toRightOf="@id/planLayoutFutureSetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:animateLayoutChanges="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Past"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="18dp"/>
                        <ImageView
                            android:id="@+id/previousGreen"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:src="@drawable/plancreator_slab"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/planLayoutComSetter"
                    android:layout_toRightOf="@id/planLayoutPreviousSetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:animateLayoutChanges="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="18dp"/>
                        <ImageView
                            android:id="@+id/completedGreen"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:src="@drawable/plancreator_slab"
                            android:visibility="gone"
                            />
                    </LinearLayout>
                </LinearLayout>
        </RelativeLayout>

            <LinearLayout
                android:id="@+id/planLayoutToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/planLayoutPrevious"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/planLayoutFuture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
        </LinearLayout>

        </LinearLayout>
    </ScrollView>

        <!-- end of cardview !-->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:src="@drawable/baseline_add_24"
        android:translationZ="3dp"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/whitecircle"
        android:translationZ="2dp"
        android:elevation="2dp"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:src="@drawable/whitecircle"
        android:translationZ="1dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="239dp"
            android:minHeight="60dp"
            android:background="@drawable/backgroundnavi"
            />
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="239dp"
        android:minHeight="60dp"
        android:background="@drawable/backgroundnavi_right"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:minHeight="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/backgroundnavi_center"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:minHeight="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/backgroundnavi_center"
        />

        <LinearLayout
            android:id="@+id/taskIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="29dp"
                    android:minWidth="38dp"
                    android:background="@drawable/sharp_label_24"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task"
                    android:textSize="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="9dp"
                    android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/calendarNavi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="28dp"
                    android:minWidth="27dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/outline_calendar_today_24"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calendar"
                    android:textSize="10dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/white"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/sectoNavi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="32dp"
            android:minWidth="32dp"
            android:background="@drawable/baseline_av_timer_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textSize="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="2dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/MenuNavi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="35dp"
            android:minWidth="32dp"
            android:background="@drawable/baseline_menu_24"
            android:layout_marginBottom="-3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="3.5dp"
            android:textColor="@color/white"/>
        </LinearLayout>



</RelativeLayout>